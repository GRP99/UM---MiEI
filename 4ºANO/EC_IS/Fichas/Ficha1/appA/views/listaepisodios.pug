extends layout

block content
    .w3-container.w3-section.w3-card-4
    header.w3-container.w3-blue
        h3.w3-center Lista de Episódios

    if(dados.length > 0)
        .w3-container
            table.w3-table.w3-bordered(style="width: 100%; border: 1px solid black;")
                tr(style="border: 1px solid black;")
                    th(style="border: 1px solid black;text-align:center") ID_Episódio
                    th(style="border: 1px solid black;text-align:center") Caracterização
                    th(style="border: 1px solid black;text-align:center") Total Pedidos
                each d in dados
                    tr(style="border: 1px solid black;")
                        td(style="border: 1px solid black;text-align:center")
                            a(href='/episodio/'+d.idepisodio)= d.idepisodio 
                        td(style="border: 1px solid black;text-align:center")= d.caracterizacao
                        td(style="border: 1px solid black;text-align:center")= d.totalPedidos
    else
        .w3-container
            p Ainda não há lista de episódios.

    footer(class="w3-container w3-center" style="position: absolute; bottom: 0; width: 100%; height: 2.5rem;")
        a(href="/") Voltar à página principal