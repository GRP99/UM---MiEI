extends layout

block content
    .w3-container.w3-section.w3-card-4
        header.w3-container.w3-blue
            h3.w3-left Lista de Alunos
            // O método Location.assign() faz com que o navegador carregue o documento na URL especificada e a exiba na janela atual.
            button.w3-btn.w3-white.w3-right(style="margin-top:0.5%" onclick="window.location.assign('/alunos/registar')") Registar novo aluno
        if lista.length > 0
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Número
                        th Nome
                        th Informação
                        th Operações
                    each a in lista
                        tr
                            td= a.Número
                            
                            td= a.Nome

                            td
                                button.w3-btn(onclick="window.location.assign('/alunos/" + a._id + "')" class='fa fa-info-circle')

                            td
                                button.w3-btn(onclick="eliminar('" + a._id + "')" class='fa fa-trash-o')
                                button.w3-btn(onclick="window.location.assign('/alunos/editar/" + a._id + "')" class='fa fa-edit')

                            
                               
        else
            div(class="w3-container")
                p Ainda não há alunos.
    footer(class="w3-container w3-blue w3-center")
        p Autor : Gonçalo Rodrigues Pinto
        p MiEI - 4ºAno - 1ºSemestre - PRI 20/21
        p <a href="mailto:a83732@alunos.uminho.pt">a83732@alunos.uminho.pt</a>
        p <a href="https://github.com/GRP99/PRI2020" target="_blank" ><img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Logo.png" alt="Github" style="width:100px;height:50px;"></img></a>