extends layout

block content
    .w3-container.w3-section.w3-card-4
        header.w3-container.w3-blue
            h3 Entidade: #{data.base.sigla}

        .w3-container
            table.w3-table-all.w3-section
                tr
                    th Estado
                        td= data.base.estado
                tr
                    th Sigla
                        td= data.base.sigla
                tr
                    th SIOE
                        td= data.base.sioe
                tr
                    th Designação
                        td= data.base.designacao
                tr
                    th Internacional
                        td= data.base.internacional
                tr  
                    th Tipologias a que pertence
                        td
                            table.w3-table-all.w3-section
                                tr
                                    td Sigla
                                    td Designação
                                each t in data.tipologias
                                    tr
                                        td
                                            a(href="http://localhost:7777/entidade/"+ data.ide +"/tipologia/" + t.id)= t.sigla
                                        td= t.designacao 
                tr
                    th Lista de processos de que a entidade é dona
                        td
                            table.w3-table-all.w3-section
                                tr
                                    td Código
                                    td Título
                                each d in data.dono
                                    tr
                                        td 
                                            a(href="http://localhost:7777/entidade/"+ data.ide +"/processo/" + d.id)= d.codigo
                                        td= d.titulo 
                                        
                tr 
                    th Lista de processos de que a entidade é participante
                        td
                            table.w3-table-all.w3-section
                                tr
                                    td Código
                                    td Título
                                each p in data.participante
                                    tr
                                        td
                                            a(href="http://localhost:7777/entidade/"+ data.ide +"/processo/" + p.id)= p.codigo  
                                        td= p.titulo 
                                                                                                                                                   
    .w3-container.w3-blue
        footer.w3-container
            p
                a(href="/") Voltar à página principal