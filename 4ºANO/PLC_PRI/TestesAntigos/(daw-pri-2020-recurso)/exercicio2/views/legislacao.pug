extends layout

block content
    .w3-container.w3-section.w3-card-4
        header.w3-container.w3-blue
            h3 Legislação: #{data.base.numero}

        .w3-container
            table.w3-table-all.w3-section
                tr
                    th Data
                        td= data.base.data
                tr
                    th Sumário
                        td= data.base.sumario
                tr
                    th Link
                        td 
                            a(href=data.base.link)= data.base.link
                tr
                    th Estado
                        td= data.base.estado                        
                tr  
                    th Entidades responsáveis pela publicação
                        td
                            table.w3-table-all.w3-section
                                tr
                                    td ID
                                    td Sigla
                                each e in data.base.entidades
                                    tr
                                        td 
                                            a(href="http://localhost:7777/legislacao/" + data.idl+"/entidade/"+e.id)= e.id
                                        td= e.sigla
                tr
                    th Lista de processos que regula
                        td
                            table.w3-table-all.w3-section
                                tr
                                    td Código
                                    td Título
                                each p in data.processos
                                    tr
                                        td= p.titulo 
                                        td
                                            a(href="http://localhost:7777/diploma/" + data.idl+"/processo/"+p.id)= p.codigo                              
    .w3-container.w3-blue
        footer.w3-container
            p
                a(href="/legislacoes") Voltar à página principal