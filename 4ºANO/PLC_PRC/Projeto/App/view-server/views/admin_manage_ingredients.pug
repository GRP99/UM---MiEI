extends layout

block content
	script(src='/javascripts/prevent_back.js')

	if alert == 1
		script.
			if (window.confirm('The ingredient with the id: #{id_removed} was successfully removed.'))
			{
				history.pushState(null, "", location.href.split("?")[0]);
			}
			else
			{
				history.pushState(null, "", location.href.split("?")[0]);
			}

	if inserted == 1
		script.
			if (window.confirm('A new ingredient was successfully inserted.'))
			{
				history.pushState(null, "", location.href.split("?")[0]);
			}
			else
			{
				history.pushState(null, "", location.href.split("?")[0]);
			}

	#content
		header
			.container-fluid
				.row
					.col-md-3
						.full
							a.logo(href='/homepage')
								img(src='/images/favicon.ico' alt='#' style='width: 15%;')
					.col-md-9
						.full
							div(class='right_header_info')
								ul
									li 
										button(class="button-transparent" onclick="location.href='http://localhost:7301/admin/manage';")
											i(class = "fa fa-home" style="color:white;font-size:25px;")
									li
										button(class="button-transparent" onclick="location.href='http://localhost:7301/admin/logout';")
											i(class = "fa fa-sign-out" style="color:white;font-size:25px;")

		about
			.container
				.row
					.col-md-12
						.title(style='margin-top: 150px')
							i(class="fa fa-user-secret" style="font-size:32px; color:#191918;")
							h2 Admin room
							span
								t(style="color:orange") Ingredients 
							t.text-secundary The ingredients displayed are associated with at least one cocktail

				.row
					.col-md-12
						table(id="admin2" style="text-align:center")

							button(class="btn btn-light" onclick="location.href='/admin/manage/admin_ingredient_insert/'") Add more   
								i(class="fa fa-plus-square" style="font-size:18px;")
							thead
								tr
									th Ingredient ID
									th Ingredient
									th Number of Cocktails
							tbody
								each i in ingredients
									tr(id=i.idIngredient)
										td=i.idIngredient
										td=i.strIngredient
										td=i.totalOfCocktails
		footer
			.copyright
				.container
					p &copy; Gon&ccedil;alo Pinto and Lu&iacute;s Ribeiro
	.overlay