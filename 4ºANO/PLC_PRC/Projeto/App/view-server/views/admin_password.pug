extends layout

block content
    script(src='/javascripts/prevent_back.js')
    #content
        header
            .container-fluid
                .row
                    .col-md-3
                        .full
                            a.logo(href='/homepage')
                                img(src='/images/favicon.ico' alt='#' style='width: 15%;')
        about
            .container
                .row
                    .col-md-12
                        .title
                            h2(style='margin-top: 150px')
                .row
                    .col-md-12
                        h3(style="font-size: 24px") Admin Authentication
                        .card.mb-3
                            .card-body(style="text-align:center")
                                form(name="AdminPassword" action='http://localhost:7301/admin/access?token=' + token , method='POST')
                                    h4(style='margin-top: 25px') Enter Password
                                    input(type="password" id='adminpwd' name='password' required='required' value="")
                                    p
                                        button(style="float:right" class="btn btn-secondary btn-sm" type="submit") Login
        footer
            .copyright
                .container
                    p &copy; Gon&ccedil;alo Pinto and Lu&iacute;s Ribeiro
    .overlay